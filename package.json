{
  "name": "rss-feed",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build:feed": "node scripts/build-feed.mjs",
    "build": "npm run build:feed",
    "print:head": "head -n 40 dist/feed.xml || true",
    "verify:self": "grep -nE '<atom:link[^>]+rel=[\"\\']self[\"\\'][^>]+href=[\"\\']https://CTV-Clearlink.github.io/RSS-Feed/feed.xml[\"\\']' dist/feed.xml",
    "verify:snf": "(! grep -nE 'xmlns:snf|<snf:|smartnews\\.be' dist/feed.xml)",
    "verify": "npm run verify:self && npm run verify:snf",
    "build:debug": "npm run build && npm run print:head && npm run verify"
  }
}
